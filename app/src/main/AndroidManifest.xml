<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.mobile_solutions.diagnosto.shpargalki">

    <application
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@mipmap/ic_launcher"
        android:label="Шпаргалки"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="HardcodedDebugMode">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".MathActivity"
            android:label="Математика">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.mobile_solutions.diagnosto.shpargalki.MainActivity" />
        </activity>

        <activity android:name=".FizikaActivity"
            android:label="Физика">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.mobile_solutions.diagnosto.shpargalki.MainActivity" />
        </activity>

    </application>

</manifest>
